{
  "name": "belajar-nodejs-unit-test",
  "version": "1.0.0",
  "description": "Belajar NodeJS Unit Test menggunakan jest",
  "main": "./src/index.js",
  "scripts": {
    "test": "jest"
  },
  "jest": {
    "maxConcurrency": 3,
    "verbose": true,
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!vendor/**/*.{js,jsx}"
    ]
  },
  "keywords": [
    "nodejs",
    "unit",
    "test",
    "jest"
  ],
  "author": "Nandang Sopyan",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "jest": "^29.7.0"
  }
}
